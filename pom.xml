            <!-- 1. JavaFX Maven Plugin -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <!-- ΟΡΙΣΜΟΣ ΤΗΣ ΚΥΡΙΑΣ ΚΛΑΣΗΣ -->
                    <mainClass>com.IAmThoughtless.cinematch.ApplicationSearchBarCineMatch</mainClass>
                    <!-- ΑΦΑΙΡΕΣΗ ΤΩΝ OPTIONS: Το plugin τα βρίσκει πλέον αυτόματα -->
                </configuration>
                <executions>
                    <!-- ⭐️ ΚΡΙΣΙΜΗ ΠΡΟΣΘΗΚΗ: Βεβαιώνει ότι το plugin μπορεί να τρέξει -->
                    <execution>
                        <id>default-cli</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- 2. Maven Assembly Plugin: Δημιουργία Ενιαίου Εκτελέσιμου JAR (Uber-JAR) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.6.0</version>
                <configuration>
                    <descriptorRefs>
                        <!-- Συμπεριλαμβάνει όλες τις εξαρτήσεις στο JAR -->
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <!-- Ορισμός της κύριας κλάσης για το εκτελέσιμο JAR -->
                            <mainClass>com.IAmThoughtless.cinematch.ApplicationSearchBarCineMatch</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
